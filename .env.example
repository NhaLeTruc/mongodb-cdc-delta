# Cassandra Configuration
CASSANDRA_HOST=localhost
CASSANDRA_PORT=9042
CASSANDRA_KEYSPACE=warehouse
CASSANDRA_USERNAME=cassandra
CASSANDRA_PASSWORD=cassandra
CASSANDRA_DC=dc1

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=warehouse
POSTGRES_USER=cdc_user
POSTGRES_PASSWORD=cdc_password
POSTGRES_SCHEMA=public

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9093
KAFKA_SCHEMA_REGISTRY_URL=http://localhost:8081
KAFKA_CONNECT_URL=http://localhost:8083

# Vault Configuration (Development)
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=dev-root-token
VAULT_NAMESPACE=cdc

# Monitoring Configuration
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development
API_PORT=8080
API_HOST=0.0.0.0

# Performance Tuning
MAX_BATCH_SIZE=1000
MAX_QUEUE_SIZE=8192
POLL_INTERVAL_MS=1000
CONNECTION_POOL_MIN=5
CONNECTION_POOL_MAX=50
CONSUMER_THREADS=4

# Error Handling
MAX_RETRIES=10
RETRY_BACKOFF_MS=3000
RETRY_BACKOFF_MULTIPLIER=2.0
MAX_RETRY_BACKOFF_MS=60000
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_MS=60000
DLQ_ENABLED=true

# Observability
METRICS_ENABLED=true
METRICS_PORT=9090
TRACE_SAMPLING_RATE=0.1
HEALTH_CHECK_INTERVAL_MS=30000

# Reconciliation
RECONCILIATION_ENABLED=true
RECONCILIATION_INTERVAL_MINUTES=60
RECONCILIATION_DRIFT_WARNING_THRESHOLD=1.0
RECONCILIATION_DRIFT_CRITICAL_THRESHOLD=5.0
RECONCILIATION_SAMPLE_SIZE=1000
